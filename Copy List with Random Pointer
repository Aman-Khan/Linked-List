    Node* createClone(Node* head){
        Node* cloneHead = new Node(-1);
        Node* tail = cloneHead;
        while(head!=NULL){
            Node* temp = new Node(head->val);
            tail->next = temp;
            tail=temp;
            head=head->next;
        }
        return cloneHead->next;
    }
    map<Node*, Node*> createMap(Node* head, Node* cloneHead){
        map<Node*, Node*> cMap;
        while(head!=NULL){
            cMap[head] = cloneHead;
            head=head->next;
            cloneHead=cloneHead->next;
        }
        return cMap;
    } 

    Node* copyRandomList(Node* head) {
        Node* cloneHead = createClone(head);
        map<Node*, Node*> cMap = createMap(head, cloneHead);
        Node* tail = cloneHead;
        while(tail!=NULL){
            tail->random = cMap[head->random];
            tail=tail->next;
            head=head->next; 
        }
        return cloneHead;
    }
